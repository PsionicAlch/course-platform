{{ template "admin" .}}

{{ define "title" }}
  <title>Users - PsionicAlch</title>
{{ end }}

{{ define "body" }}
  <section class="admin-container">
    <div class="admin-header">
      <h2>Users Administration</h2>

      <div class="admin-header-actions">
        <form>
          <input
            type="text"
            name="query"
            id="query"
            class="shadow-sm"
            placeholder="Search terms..."
            hx-trigger="keyup changed delay:500ms"
            hx-get="/admin/users/htmx?page=1"
            hx-target=".admin-body table tbody"
          >
        </form>
      </div>
    </div>

    <hr>

    <div class="admin-body shadow-sm">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Affiliate Code</th>
            <th>Affiliate Points</th>
            <th>Tutorials Liked</th>
            <th>Tutorials Bookmarked</th>
            <th>Courses Owned</th>
            <th>Created At</th>
            <th>Updated at</th>
          </tr>
        </thead>
        <tbody>
          {{ template "users-list" .Users }}
        </tbody>
      </table>
    </div>
  </section>
{{ end }}

