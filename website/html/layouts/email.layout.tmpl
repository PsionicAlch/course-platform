{{ define "email" }}
  <!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="Content-Type" content="text/html charset=UTF-8">

      <title>{{.UserData.Title}}</title>

      <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

      <style>
          body {
              font-family: 'Roboto', sans-serif;
              margin: 0;
              padding: 0;
              background-color: #e5e5e5;
              color: #6a7a88;
          }
          table {
              border-spacing: 0;
              border-collapse: collapse;
          }
          .email-container {
              width: 100%;
              max-width: 600px;
              margin: 0 auto;
              background-color: #fafafa;
              border-radius: 6px;
              overflow: hidden;
          }
          .content {
              padding: 20px;
          }
          h1 {
              font-size: 24px;
              color: #394656;
              margin: 0 0 20px;
          }
          p {
              font-size: 16px;
              margin: 0 0 15px;
              color: #6a7a88;
          }
          .cta-button {
              display: inline-block;
              padding: 10px 20px;
              background-color: #61e0ee;
              border: 1px solid #3ec9de;
              color: #394656;
              text-decoration: none;
              font-size: 16px;
              border-radius: 4px;
              box-shadow: 3px 6px 6px 1px rgb(0 0 0 / 0.1), -3px 6px 6px 1px rgb(0 0 0 / 0.1);
          }
          .cta-button:hover {
              background-color: #3ec9de;
          }
          .footer {
              text-align: center;
              padding: 15px;
              background-color: #394656;
              color: #ffffff;
          }
          .footer a {
              color: #61e0ee;
              text-decoration: none;
              margin: 0 5px;
              font-size: 14px;
          }
          .footer a:hover {
              text-decoration: underline;
          }

          @media screen and (max-width: 600px) {
              .content {
                  padding: 15px;
              }
              h1 {
                  font-size: 20px;
              }
              p {
                  font-size: 14px;
              }
          }
      </style>
  </head>
  <body>
      <table role="presentation" width="100%" cellspacing="0" cellpadding="0">
          <tr>
              <td align="center" style="padding: 20px 0;">
                  <table role="presentation" class="email-container" width="100%" cellspacing="0" cellpadding="0">
                      <tr>
                          <td class="content">
                            {{ block "content" .UserData }}

                            {{ end }}
                          </td>
                      </tr>
                      <tr>
                          <td class="footer">
                              <p>
                                  <a href="https://facebook.com">Facebook</a> |
                                  <a href="https://twitter.com">Twitter</a>
                              </p>
                              <p>
                                  <a href="/privacy-policy">Privacy Policy</a> |
                                  <a href="/refund-policy">Refund Policy</a> |
                                  <a href="/affiliate-program">Affiliate Program</a>
                              </p>
                          </td>
                      </tr>
                  </table>
              </td>
          </tr>
      </table>
  </body>
  </html>
{{ end }}
